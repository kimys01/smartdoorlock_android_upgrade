<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5">

    <!-- 상태 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStatus"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginBottom="16dp"
                app:tint="#2196F3"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록된 도어락이 없습니다"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#888888"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- [오류 해결] 잠금 해제 버튼 (ID: btnUnlock) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUnlock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="문 열기 (UNLOCK)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient_button_background"/>

    <!-- [오류 해결] 새 기기 등록 버튼 (ID: btnAddDevice) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddDevice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="+ 새 도어락 등록"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:background="@drawable/edit_text_background"/>
    <!-- 배경 리소스가 없다면 android:background="#FFFFFF" 등으로 변경 가능 -->

</LinearLayout>