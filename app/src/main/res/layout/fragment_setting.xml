<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.setting.SettingsFragment">

    <!--  상단 고정 박스  -->

    <!--  본문 영역  -->
    <LinearLayout
        android:id="@+id/settingContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- [수정] AppCompatButton으로 변경, 그라데이션 및 텍스트 색상 적용 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deviceScanFragment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:text="디바이스 연결"
            android:textSize="50sp"
            android:background="@drawable/gradient_button_background"
            android:textColor="#FFFFFF"/>
        <!-- [수정] AppCompatButton으로 변경, 그라데이션 및 텍스트 색상 적용 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAuthMethod"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:text="인증방식"
            android:textSize="50sp"
            android:background="@drawable/gradient_button_background"
            android:textColor="#FFFFFF"/>

        <!-- [수정] AppCompatButton으로 변경, 그라데이션 및 텍스트 색상 적용 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDetailSetting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:text="상세설정"
            android:textSize="50sp"
            android:background="@drawable/gradient_button_background"
            android:textColor="#FFFFFF"/>

        <!-- [수정] AppCompatButton으로 변경, 그라데이션 및 텍스트 색상 적용 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonWifiSetting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:text="Wi-Fi 설정"
            android:textSize="50sp"
            android:background="@drawable/gradient_button_background"
            android:textColor="#FFFFFF"/>

        <!-- [수정] AppCompatButton으로 변경, 그라데이션 및 텍스트 색상 적용 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonHelp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:text="도움말"
            android:textSize="50sp"
            android:background="@drawable/gradient_button_background"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>